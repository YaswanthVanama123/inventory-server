# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/inventory_db
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/inventory_db?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure secret with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-min-64-characters-long-replace-this-with-generated-key
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
# Choose email provider: 'smtp', 'gmail', or 'sendgrid'
EMAIL_PROVIDER=smtp

# SMTP Configuration (for custom SMTP or when EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Gmail Configuration (when EMAIL_PROVIDER=gmail)
# Note: Use App Password, not regular Gmail password
# Generate App Password: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password

# SendGrid Configuration (when EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Settings
EMAIL_FROM=noreply@yourdomain.com
COMPANY_NAME=Inventory Management System
COMPANY_EMAIL=support@yourdomain.com
COMPANY_PHONE=+1-234-567-8900
SUPPORT_EMAIL=support@yourdomain.com

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_MAX_FILES=10
UPLOAD_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
UPLOAD_ALLOWED_DOCUMENT_TYPES=application/pdf
UPLOAD_DIR=uploads

# Image Processing Settings
IMAGE_MAX_WIDTH=1200
IMAGE_MAX_HEIGHT=1200
IMAGE_THUMBNAIL_SIZE=300
IMAGE_QUALITY=85
IMAGE_FORMAT=jpeg

# PDF Generation Settings
PDF_COMPANY_NAME=Your Company Name
PDF_COMPANY_ADDRESS=123 Business St, City, State 12345
PDF_COMPANY_PHONE=+1-555-0123
PDF_COMPANY_EMAIL=info@yourcompany.com
PDF_COMPANY_WEBSITE=https://www.yourcompany.com
PDF_LOGO_PATH=assets/logo.png
PDF_PAGE_SIZE=A4
PDF_MARGIN=50

# Email Notification Settings
EMAIL_ENABLE_NOTIFICATIONS=true
EMAIL_LOW_STOCK_ALERT=true
EMAIL_NEW_USER_WELCOME=true
EMAIL_PASSWORD_RESET=true
EMAIL_INVOICE_DELIVERY=true
EMAIL_WEEKLY_REPORT=true
EMAIL_ADMIN_ADDRESSES=admin@yourcompany.com

# Report Settings
REPORT_WEEKLY_DAY=1
REPORT_WEEKLY_TIME=09:00
REPORT_TIMEZONE=America/New_York
REPORT_EXPORT_DIR=uploads/reports

# QR Code Settings
QR_CODE_SIZE=300
QR_CODE_MARGIN=2
QR_CODE_ERROR_CORRECTION=M
QR_CODE_TYPE=png

# Invoice Settings
INVOICE_PREFIX=INV
INVOICE_STARTING_NUMBER=1000
INVOICE_TAX_RATE=0.0
INVOICE_TAX_NAME=Tax
INVOICE_CURRENCY=USD
INVOICE_CURRENCY_SYMBOL=$
INVOICE_TERMS=Payment due within 30 days
INVOICE_EXPORT_DIR=uploads/invoices

# Security Settings
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key-change-this

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# =======================================
# WAREHOUSE MANAGEMENT SYSTEM
# =======================================

# CustomerConnect Portal Configuration
CUSTOMERCONNECT_BASE_URL=https://envirostore.mycustomerconnect.com
CUSTOMERCONNECT_USERNAME=your_customerconnect_username
CUSTOMERCONNECT_PASSWORD=your_customerconnect_password

# RouteStar Portal Configuration
ROUTESTAR_BASE_URL=https://emnrv.routestar.online
ROUTESTAR_USERNAME=your_routestar_username
ROUTESTAR_PASSWORD=your_routestar_password

# Playwright Browser Automation Configuration
HEADLESS=true
BROWSER_TIMEOUT=30000

# Automated Sync Scheduler Configuration
# Set to 'true' to automatically start the scheduler when server starts
AUTO_START_SCHEDULER=false
# Sync interval in minutes (how often to fetch data from portals)
SYNC_INTERVAL_MINUTES=30

# Timezone for scheduler (affects when syncs run)
TZ=America/New_York
